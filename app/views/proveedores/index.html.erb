<h1>Lista de Proveedores</h1>
<!-- <p>Find me in app/views/proveedores/index.html.erb</p> -->

<table>
  <tr>
    <th>Nombre</th>
    <th colspan="3">Acciones</th>
  </tr>

  <% @proveedores.each do |proveedores| %>
    <tr>
      <td><%= proveedores.nombre %></td>
      <td><%= link_to 'Ver', proveedore_path(proveedores) %></td>
      <td><%= link_to 'Editar', edit_proveedore_path(proveedores) %></td>
      <td><%= link_to 'Eliminar', proveedore_path(proveedores), method: :delete, data: { confirm: '¿Estás seguro?' }, "data-turbo-method": "delete" %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'Nuevo Proveedor', new_proveedore_path %>
<%= link_to 'Volver', root_path %>